{
    "code-block-style": false,
    "line-length": false,
    "list-marker-space": false,
    "no-alt-text": false,
    "no-inline-html": {
        "allowed_elements": [
            "dl",
            "dd",
            "dt",
            "figure",
            "figcaption",
            "style",
            "strike",
            "br",
            "img",
            "video"
        ]
    },
    "ul-indent": {
        "indent": 4
    }
}
